@model IEnumerable<MeetingPlanner.Models.Prayer>

@{
    ViewData["Title"] = "Prayers";
}

<h1>Prayers</h1>

<p>
    <a asp-action="Create">Add to Agenda</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PrayerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OpeningP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SacramentP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClosingP)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrayerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SacramentP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingP)
            </td>
              <td>
                <a asp-action="Edit" asp-route-id="@item.PrayerID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PrayerID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PrayerID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
